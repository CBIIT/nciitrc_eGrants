<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.5/css/jquery.dataTables.css">
<link href="//cdn.datatables.net/1.10.5/css/jquery.dataTables_themeroller.css" rel="stylesheet" type="text/css" />
<!-- jQuery -->
<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>

<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.js">
</script>




<div id="main">
    <!--start main-->
    <div id="caption"><b id="page_title">Integration Page</b></div>


    <div>@Model.Result</div>

    <div id="triggeractions">
        <div>
            <div class=""><h2>Trigger Integration Actions</h2></div>
            <table id="actions" class="blueTable">
                <thead>
                <th>Backend Integration Process</th>
                <th>Activate Process</th>
                </thead>
                <tbody>
                    <tr><td>Bulk Action: Download Current Email Messages</td><td align="center"><a target="_top" href="@Url.Action("InvokeGraphData","Integration")"><i class="ui-icon-play"></i>Invoke</a></td></tr>
                    <tr><td>Bulk Action: Run the Rules Engine</td><td align="center"><a target="_top" href="@Url.Action("InvokeRules","Integration")">Invoke</a></td></tr>
                    <tr><td>Bulk Action: Process the Matched Email Messages</td><td align="center"><a target="_top" href="@Url.Action("InvokeActions","Integration")">Invoke</a></td></tr>
                    <tr><td></td><td align="center"></td></tr>
                    <tr><td>Individual Action: View Messages Waiting to Process</td><td align="center"><a target="_top" href="@Url.Action("ViewMessagesToProcess","Integration")">Invoke</a></td></tr>
                    @*<tr><td>Individual Action: View Processing Results </td><td align="center"><a target="_top" href="@Url.Action("InvokeActions","Integration")">Invoke</a></td></tr>*@
                </tbody>
            </table>
        </div>
    </div>

    <div id="MailboxView">
        <h2>Mailbox View</h2>
        <div>
            @if (Model.Messages.Count > 0)
            {
                <table id="MailMessages" class="table">
                    <thead>
                    <th>Date</th>
                    <th>To</th>
                    <th>From</th>
                    <th>Subject</th>
                    <th>Has Attachments</th>
                    <th>Important</th>
                    <th><i class="glyphicon-paperclip"></i></th>
                    <th><i class="glyphicon-import"></i></th>
                    </thead>
                    <tbody>
                        @foreach (var msg in Model.Messages)
                        {
                            <tr>
                                <td>@msg.ReceivedDateTime</td>

                                <td>@msg.ToRecipients</td>

                                <td>@msg.EmailFrom</td>

                                <td>@msg.Subject</td>

                                @*<td>@msg.BodyPreview</td>*@

                                <td>@msg.HasAttachments</td>

                                <td>@msg.Importance</td>
                                <td>
                                    @if (msg.HasAttachments)
                                    {
                                        <a target="_top" href="@Url.Action("InvokeGetAttachment","Integration", new {messageId=$"{msg.GraphId}"})">Download</a>
                                    }
                                </td>
                                <td>

                                    <a target="_top" href="@Url.Action("ProcessEmailMessage","Integration", new {messageId=$"{msg.Id}"})">Process</a>
                                </td>
                            </tr>

                        }
                    </tbody>

                </table>
            }
            else
            {
                <div>No Messages Available</div>
            }

        </div>
    </div>
</div>

<script language="JavaScript">
    $(document).ready(function () {
        $('#MailMessages').DataTable(
            {
                "autowidth": false,
                "columns": [
                    { "width": "10%" },
                    { "width": "10%" },
                    { "width": "10%" },
                    { "width": "50%" },
                    { "width": "5%" },
                    { "width": "5%" },
                    { "width": "5%" },
                    { "width": "5%" }
                ]
            });
    });

</script>