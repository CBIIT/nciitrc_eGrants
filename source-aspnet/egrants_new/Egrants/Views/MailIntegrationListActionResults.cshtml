<script language="JavaScript">
    $(document).ready(function () {
        $('#ActionResults').DataTable(
            {
                "autowidth": false,
                "columns": [
                    { "width": "10%" },
                    { "width": "10%" },
                    { "width": "10%" },
                    { "width": "50%" },
                    { "width": "5%" },
                    { "width": "5%" },
                    { "width": "5%" },
                    { "width": "5%" }
                ]
            });
    });

</script>


<div id="main">
    <!--start main-->
    <div id="caption"><b id="page_title">Message Processing Results Page</b></div>


    <div>@Model.Result</div>

    @{
        var msg = Model.Messages.FirstOrDefault();
    }

    <div class="flex">
        <table class="message">
            @*<tr><td><div>Date:</div></td><td> <div>To Recipients:</div></td><td>  <div>From:</div></td></tr>*@
            <tr>
                <td>
                    <div><b>Date:</b></div>
                    <div>@msg.CreatedDateTime</div>
                </td>
                <td>
                    <div><b>To Recipients:</b></div>
                    <div>@msg.ToRecipients</div>
                </td>
                <td>
                    <div><b>From:</b></div>
                    <div>@msg.EmailFrom</div>
                </td>
            </tr>
            @*<tr>
                    <td colspan="2">
                        <div>Subject:</div>
                    </td>
                    <td>
                        <div>HasAttachments?</div>
                    </td>
                </tr>*@
            <tr>
            <tr>
                <td colspan="2">
                    <div><b>Subject:</b></div>
                    <div>@msg.Subject</div>
                </td>
                <td>
                    <div><b>HasAttachments?</b></div>
                    <div>@msg.HasAttachments</div>
                </td>
            </tr>
            <tr>
                <td colspan=" 3">
                    <div><textarea class="email-body">@msg.MessageBody</textarea></div>
                </td>
            </tr>
        </table>
    </div>

    <div id="ActionResults">
        <h3>Email Action Results</h3>
        <div>
            @if (Model.ActionResults.Count > 0)
            {
                <table id="ActionResults" class="table">
                    <thead>
                    <th>Rule Description</th>
                    <th>Message Id</th>
                    <th>Date Action Triggered</th>
                    @*<th>All Actions Completed?</th>*@
                    <th>Action Name</th>
                    <th>Action Message</th>
                    <th>Action Complete</th>
                    <th>Exception </th>
                    <th>Action</th>
                    </thead>
                    <tbody>
                    @foreach (var result in Model.ActionResults)
                    {

                        string completedStatus = String.Empty;
                        if (result.ActionCompleted)
                        {
                            completedStatus = "True";
                        }
                        else
                        {
                            completedStatus = "False";

                        }

                        <tr>
                            <td>@result.RuleDescription</td>
                            <td>@result.MessageId</td>
                            <td>@result.ActionTriggered</td>

                            <td>@result.ActionName</td>
                            <td>@result.ActionMessage</td>
                            <td>@completedStatus</td>
                            <td>@result.ExceptionText</td>
                            <td>
                                @if (result.ActionCompleted)
                                {
                                    string url = string.Empty;
                                    JObject actionMessage = JObject.Parse(result.ActionMessage);
                                    url = (string) actionMessage["linkToDoc"];
                                    <a target="_top" href="@url">View Result</a>
                                }
                                else
                                {
                                    <a target="_top" href="@Url.Action("ProcessEmailMessage", "Integration", new {messageId = $"{result.MessageId}"})">Reprocess</a>
                                }
                            </td>
                        </tr>

                    }
                    </tbody>

                </table>
            }
            else
            {
                <div>No Action Results Currently Available</div>
            }

        </div>
    </div>
</div>